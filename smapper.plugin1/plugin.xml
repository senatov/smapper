<?xml version="1.0" encoding="UTF-8"?>

<plugin>
   <extension
         id="smapper.plugin1"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            icon="$nl$/icons/32x32.gif"
            thread="main"
            visible="true">
         <run
               class="com.senatov.smapperApp.Activator">
         </run>
      </application>
   </extension>
   <extension
         id="smapper.perspective"
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.senatov.smapper.bundle.PerspectiveFactory1"
            icon="$nl$/icons/128x128.gif"
            id="com.senatov.smapper.bundle.perspective1"
            name="Just Perspective">
         <description>
            ssss description body text
         </description>
      </perspective>
   </extension>
   <extension
         id="smapper.ext.intro"
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="smapper.plugin1.intro">
      </intro>
      <introProductBinding
            introId="smapper.plugin1.intro"
            productId="smapper.plugin1.product">
      </introProductBinding>
   </extension>
   <extension
         id="smapper.ext.intro.config"
         point="org.eclipse.ui.intro.config">
      <config
            content="introContent.xml"
            id="smapper.plugin1.introConfigId"
            introId="smapper.plugin1.intro">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx"
                  style="content/shared.css">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="Smapper">
         <property
               name="appName"
               value="Smapper">
         </property>
      </product>
   </extension>
</plugin>
