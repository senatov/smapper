<?xml version="1.0" encoding="UTF-8"?>

<plugin>
   <extension
         id="cmapper_app_id"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            icon="$nl$/icons/32x32.bmp"
            thread="main"
            visible="true">
         <run
               class="com.senatov.smapperApp.Application">
         </run>
      </application>
   </extension>
   <extension
         id="perspective_id"
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.senatov.smapper.bundle.PerspectiveFactory1"
            icon="$nl$/icons/128x128.gif"
            id="perspective1_id"
            name="Perspective proveweise">
         <description>
            ssss description body text
         </description>
      </perspective>
   </extension>
   <extension
         id="cust_intro_part_id"
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            icon="$nl$/icons/16x16-8.bmp"
            id="intro_id"
            label="introduction probeweise">
      </intro>
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="smapper.plugin1.intro">
      </intro>
      <introProductBinding
            introId="smapper.plugin1.intro"
            productId="smapper.plugin1.product">
      </introProductBinding>
   </extension>
   <extension
         id="config_id"
         point="org.eclipse.ui.intro.config">
      <config
            content="introContent.xml"
            id="introConfig_Id"
            introId="intro_id">
         <presentation
               home-page-id="intro_config_root_id"
               standby-page-id="standby_page_id">
            <implementation
                  kind="html"
                  os="win32,linux,macosx"
                  style="content/shared.css">
            </implementation>
         </presentation>
      </config>
      <config
            content="introContent.xml"
            id="smapper.plugin1.introConfigId"
            introId="smapper.plugin1.intro">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx"
                  style="content/shared.css">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         id="products_id"
         name="products name probeweise"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="Product for smapper">
         <property
               name="appName"
               value="Product for smapper">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/smapper.plugin1/css/default.css">
         </property>
         <property
               name="aboutImage"
               value="icons/128x128.gif">
         </property>
         <property
               name="aboutText"
               value="(c) Iakov Senatov">
         </property>
         <property
               name="windowImages"
               value="icons/16x16.gif,icons/32x32.gif,icons/48x48.gif,icons/64x64.gif,icons/128x128.gif,icons/256x256.gif">
         </property>
      </product>

   </extension>
   <extension
         id="splash_handler_id"
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="smapper.plugin1.splashHandlers.InteractiveSplashHandler"
            id="interactiveSplash_id">
      </splashHandler>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="Product for smapper">
         <property
               name="windowImages"
               value="icons/16x16.gif,icons/32x32.gif,icons/48x48.gif,icons/64x64.gif,icons/128x128.gif,icons/256x256.gif">
         </property>
         <property
               name="aboutText"
               value="(c) Iakov Senatov">
         </property>
         <property
               name="aboutImage"
               value="icons/128x128.gif">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/smapper.plugin1/css/default.css">
         </property>
         <property
               name="appName"
               value="Product for smapper">
         </property>
      </product>
   </extension>
</plugin>
