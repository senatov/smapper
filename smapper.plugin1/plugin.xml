               value="7,252,445,20">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/smapper.plugin1/css/default.css">
         </property>
         <property
               name="appName"
               value="Product for smapper">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="smapper.plugin1.smapper.ext.application"
            name="Product for smapper">
         <property
               name="windowImages"
               value="icons/16x16.gif,icons/32x32.gif,icons/48x48.gif,icons/64x64.gif,icons/128x128.gif,icons/256x256.gif">
         </property>
         <property
               name="aboutText"
               value="(c) Iakov Senatov">
         </property>
         <property
               name="aboutImage"
               value="icons/128x128.gif">
         </property>
         <property
               name="startupForegroundColor"
               value="8080FF">
         </property>
         <property
