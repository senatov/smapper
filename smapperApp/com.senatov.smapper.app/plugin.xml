<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="sMapper"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="clearPersistedState"
               value="true">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/com.senatov.smapper.app/css/default.css">
         </property>
         <property
               name="appName"
               value="sMapper">
         </property>
         <property
               name="windowImages"
               value="icons/16x16.gif,icons/32x32.gif,icons/48x48.gif,icons/64x64.gif,icons/128x128.gif,icons/256x256.gif">
         </property>
         <property
               name="aboutImage"
               value="icons/256x256.gif">
         </property>
         <property
               name="aboutText"
               value="Mapper of DB Tables">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandlerProductBinding
            productId="com.senatov.smapperApp.product"
            splashId="com.senatov.smapperapp.splashHandlers.browser">
      </splashHandlerProductBinding>
   </extension>
</plugin>
