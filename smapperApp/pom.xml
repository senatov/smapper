<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>com.senatov.smapperApp</groupId>
	<artifactId>smapper</artifactId>
	<packaging>pom</packaging>

	<version>1.0.0-SNAPSHOT</version>
	<name>smapper</name>
	<description>Automatic Object Mapper</description>

	<scm>
		<connection>scm:git:https://github.com/senatov/smapper/tree/master/smapperApp</connection>
		<developerConnection>scm:git:https://github.com/senatov/smapper/tree/master/smapperApp</developerConnection>
		<url>https://github.com/senatov/smapper.git</url>
	</scm>

	<organization>
		<name>Iakov Senatov</name>
		<url>https://www.xing.com/profile/Iakov_Senatov</url>
	</organization>


	<build>
		<finalName>${project.artifactId}</finalName>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/resources-gen</directory>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
			</testResource>
			<testResource>
				<directory>src/test/resources-gen</directory>
			</testResource>
		</testResources>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>${lcs.maven-javadoc-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-ear-plugin</artifactId>
					<version>${lcs.maven-ear-plugin.version}</version>
					<configuration>
						<version>6</version>
						<archive>

							<manifestEntries>
								<Version>${project.version}</Version>
								<Implementation-Title>${project.name}</Implementation-Title>
								<Version-Date>${maven.build.timestamp}</Version-Date>
								<Author>${project.organization.name}</Author>
								<Implementation-Vendor-Id>${project.groupId}</Implementation-Vendor-Id>
								<Implementation-Vendor>${project.organization.name}</Implementation-Vendor>
								<Built-By>${project.organization.name}</Built-By>
							</manifestEntries>

						</archive>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>${lcs.maven-war-plugin.version}</version>

					<configuration>
						<archive>
							<manifestEntries>
								<Version>${project.version}</Version>
								<Implementation-Title>${project.name}</Implementation-Title>
								<Version-Date>${maven.build.timestamp}</Version-Date>
								<Author>${project.organization.name}</Author>
								<Implementation-Vendor-Id>${project.groupId}</Implementation-Vendor-Id>
								<Implementation-Vendor>${project.organization.name}</Implementation-Vendor>
								<Built-By>${project.organization.name}</Built-By>
							</manifestEntries>
						</archive>
					</configuration>

				</plugin>
				<!-- qs -->
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>findbugs-maven-plugin</artifactId>
					<version>${lcs.findbugs-maven-plugin.version}</version>
					<configuration>
						<reportFormat>xml</reportFormat>
						<threshold>${lcs.qs.findbugs.threshold}</threshold>
						<effort>${lcs.qs.findbugs.effort}</effort>
						<!-- disable MS_EXPOSE_REP,EI_EXPOSE_REP,EI_EXPOSE_REP,EI_EXPOSE_STATIC_REP2 -->
						<omitVisitors>FindReturnRef</omitVisitors>
						<excludeFilterFile>findbugs/lcs-findbugs-exclude.xml</excludeFilterFile>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>com.db.lcs.lib.msg</groupId>
							<artifactId>lcs-maven-config</artifactId>
							<version>${lcs-maven.config.version}</version>
						</dependency>
					</dependencies>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-checkstyle-plugin</artifactId>
					<version>${lcs.maven-checkstyle-plugin.version}</version>
					<configuration>
						<encoding>UTF-8</encoding>
						<configLocation>lcs-checkstyle/sun-checks.xml</configLocation>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>com.db.lcs.lib.msg</groupId>
							<artifactId>lcs-maven-config</artifactId>
							<version>${lcs-maven.config.version}</version>
						</dependency>
					</dependencies>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-pmd-plugin</artifactId>
					<version>${lcs.maven-pmd-plugin.version}</version>
					<configuration>
						<targetJdk>${lcs.target.version}</targetJdk>
						<sourceEncoding>${project.java.encoding}</sourceEncoding>
						<minimumTokens>75</minimumTokens>
						<rulesets>
							<!-- pmd default -->
							<ruleset>/rulesets/basic.xml</ruleset>
							<ruleset>/rulesets/unusedcode.xml</ruleset>
							<ruleset>/rulesets/imports.xml</ruleset>
							<!-- pmd custom (part of xradar) -->
							<ruleset>/dbwcf/pmd/design.xml</ruleset>
							<ruleset>/dbwcf/pmd/codesize.xml</ruleset>
							<ruleset>/dbwcf/pmd/coupling.xml</ruleset>
							<ruleset>/rulesets/optimizations.xml</ruleset>
							<ruleset>/dbwcf/pmd/sunsecure.xml</ruleset>
							<ruleset>/rulesets/logging-java.xml</ruleset>
							<ruleset>/dbwcf/pmd/strings.xml</ruleset>
						</rulesets>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>com.db.lcs.lib.msg</groupId>
							<artifactId>lcs-maven-config</artifactId>
							<version>${lcs-maven.config.version}</version>
						</dependency>
					</dependencies>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${lcs.maven-compiler-plugin.version}</version>
					<configuration>
						<target>${lcs.target.version}</target>
						<source>${lcs.source.version}</source>
						<verbose>false</verbose>
						<!--compilerVersion>1.6</compilerVersion -->
						<encoding>${project.java.encoding}</encoding>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>${lcs.maven-assembly-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-source-plugin</artifactId>
					<version>2.1.2</version>
					<executions>
						<execution>
							<goals>
								<goal>jar</goal>
								<goal>test-jar</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>com.sun.tools.xjc.maven2</groupId>
					<artifactId>maven-jaxb-plugin</artifactId>
					<version>${lcs.maven-jaxb-plugin.version}</version>
				</plugin>
				<!-- DAP Requirement -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>${lcs.maven-jar-plugin.version}</version>
					<configuration>
						<archive>

							<manifestEntries>
								<Version>${project.version}</Version>
								<Implementation-Title>${project.name}</Implementation-Title>
								<Version-Date>${maven.build.timestamp}</Version-Date>
								<Author>${project.organization.name}</Author>
								<Implementation-Vendor-Id>${project.groupId}</Implementation-Vendor-Id>
								<Implementation-Vendor>${project.organization.name}</Implementation-Vendor>
								<Built-By>${project.organization.name}</Built-By>
							</manifestEntries>

						</archive>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>${lcs.maven-deploy-plugin.version}</version>
					<configuration>
						<archive>

							<manifestEntries>
								<Version>${project.version}</Version>
								<Implementation-Title>${project.name}</Implementation-Title>
								<Version-Date>${maven.build.timestamp}</Version-Date>
								<Author>${project.organization.name}</Author>
								<Implementation-Vendor-Id>${project.groupId}</Implementation-Vendor-Id>
								<Implementation-Vendor>${project.organization.name}</Implementation-Vendor>
								<Built-By>${project.organization.name}</Built-By>
							</manifestEntries>

						</archive>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.sonar</groupId>
					<artifactId>sonar-maven-plugin</artifactId>
					<version>${lcs.sonar-maven-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>${lcs.maven-surefire-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-scm-plugin</artifactId>
					<version>1.8.1</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<!-- reporting -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>${lcs.maven-site-plugin.version}</version>
				<dependencies>
					<dependency><!-- add support for ssh/scp -->
						<groupId>org.apache.maven.wagon</groupId>
						<artifactId>wagon-ssh-external</artifactId>
						<version>1.0</version>
					</dependency>
				</dependencies>
				<configuration>
					<reportPlugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-project-info-reports-plugin</artifactId>
							<version>${lcs.maven-project-info-reports-plugin.version}</version>
							<configuration>
								<encoding>${project.java.encoding}</encoding>
							</configuration>
						</plugin>
						<!-- heapsize ist fuer den release process SEHR wichtig !!! -->
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-javadoc-plugin</artifactId>
							<version>${lcs.maven-javadoc-plugin.version}</version>
							<configuration>
								<maxmemory>512M</maxmemory>
								<encoding>${project.java.encoding}</encoding>
							</configuration>
						</plugin>
					</reportPlugins>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/main/java-gen</source>
							</sources>
						</configuration>
					</execution>
					<execution>
						<id>add-test-source</id>
						<phase>generate-test-sources</phase>
						<goals>
							<goal>add-test-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/test/java-gen</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>${lcs.maven-antrun-plugin.version}</version>
			</plugin>

		</plugins>

	</build>

	<repositories>
		<repository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>daily</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
			<id>lcscentral</id>
			<name>msg nexus</name>
			<url>${lcs.nexus.url}/content/groups/${lcs.nexus.publicrepo.name}/</url>
			<layout>default</layout>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>lcscentral</id>
			<name>msg nexus</name>
			<url>${lcs.nexus.url}/content/groups/${lcs.nexus.publicrepo.name}/</url>
			<layout>default</layout>
			<snapshots>
				<enabled>true</enabled>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>daily</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
		</pluginRepository>
	</pluginRepositories>

	<properties>


		<lcs.source.version>1.7</lcs.source.version>
		<lcs.target.version>1.7</lcs.target.version>

		<lcs.spring.version>3.0.6.RELEASE</lcs.spring.version>

		<lcs.javaee-api.version>6.0</lcs.javaee-api.version>

		<!-- plugin version -->
		<lcs.buildnumber-maven-plugin.version>1.0</lcs.buildnumber-maven-plugin.version>
		<lcs.cobertura-maven-plugin.version>2.5.1</lcs.cobertura-maven-plugin.version>
		<lcs.emma-maven-plugin.version>1.0-alpha-3</lcs.emma-maven-plugin.version>
		<lcs.findbugs-maven-plugin.version>2.4.0</lcs.findbugs-maven-plugin.version>

		<lcs.maven-antrun-plugin.version>1.7</lcs.maven-antrun-plugin.version>

		<lcs.javancss-maven-plugin.version>2.0</lcs.javancss-maven-plugin.version>
		<lcs.jdepend-maven-plugin.version>2.0-beta-2</lcs.jdepend-maven-plugin.version>
		<lcs.junit.version>4.10</lcs.junit.version>

		<lcs.jaxws-maven-plugin.version>2.2</lcs.jaxws-maven-plugin.version>
		<lcs.jaxws-tools.version>2.2.6-2</lcs.jaxws-tools.version>

		<lcs.maven-jaxb-plugin.version>1.1.1</lcs.maven-jaxb-plugin.version>
		<lcs.maven-assembly-plugin.version>2.3</lcs.maven-assembly-plugin.version>
		<lcs.maven-checkstyle-plugin.version>2.9.1</lcs.maven-checkstyle-plugin.version>
		<lcs.maven-ckjm-plugin.version>0.4</lcs.maven-ckjm-plugin.version>
		<lcs.maven-compiler-plugin.version>2.3.2</lcs.maven-compiler-plugin.version>
		<lcs.maven-dependency-plugin.version>2.4</lcs.maven-dependency-plugin.version>
		<lcs.maven-deploy-plugin.version>2.5</lcs.maven-deploy-plugin.version>
		<lcs.maven-ear-plugin.version>2.6</lcs.maven-ear-plugin.version>
		<lcs.maven-jar-plugin.version>2.4</lcs.maven-jar-plugin.version>
		<lcs.maven-javadoc-plugin.version>2.8</lcs.maven-javadoc-plugin.version>
		<lcs.maven-pmd-plugin.version>2.7.1</lcs.maven-pmd-plugin.version>
		<lcs.maven-project-info-reports-plugin.version>2.4</lcs.maven-project-info-reports-plugin.version>
		<lcs.maven-surefire-plugin.version>2.12</lcs.maven-surefire-plugin.version>
		<lcs.maven-surefire-report-plugin>2.9</lcs.maven-surefire-report-plugin>
		<lcs.maven-site-plugin.version>3.0</lcs.maven-site-plugin.version>
		<lcs.sonar-maven-plugin.version>2.13.1</lcs.sonar-maven-plugin.version>
		<lcs.maven-war-plugin.version>2.1.1</lcs.maven-war-plugin.version>

		<lcs-maven.config.version>${project.version}</lcs-maven.config.version>

		<!-- maven project properties -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<project.java.encoding>UTF-8</project.java.encoding>

		<!-- environment properties -->

		<!-- qs properties -->

	</properties>


	<profiles>
		<!-- nightly deploy configuration -->
		<profile>
			<id>nightly</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<distributionManagement>
				<repository>
					<id>lcs-nexus</id>
					<name>lcs nexus</name>
					<url>
            ${lcs.nexus.url}/content/repositories/${lcs.nexus.distributionrepo.name}
					</url>
				</repository>
				<site>
					<id>msgp198f</id>
					<name>LCS Apache Server</name>
					<url>${nightly.lcssite.url}</url>
				</site>
			</distributionManagement>
		</profile>


		<profile>
			<id>build-number</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>buildnumber-maven-plugin</artifactId>
						<version>${lcs.buildnumber-maven-plugin.version}</version>
						<executions>
							<execution>
								<phase>validate</phase>
								<goals>
									<goal>create</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<doCheck>false</doCheck>
							<doUpdate>false</doUpdate>
							<revisionOnScmFailure>0</revisionOnScmFailure>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<!-- complex report configuration -->
		<profile>
			<id>lcs-reports</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>

					<!-- reporting -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-site-plugin</artifactId>
						<version>${lcs.maven-site-plugin.version}</version>
						<dependencies>
							<dependency><!-- add support for ssh/scp -->
								<groupId>org.apache.maven.wagon</groupId>
								<artifactId>wagon-ssh-external</artifactId>
								<version>1.0</version>
							</dependency>
						</dependencies>
						<configuration>
							<reportPlugins>
								<plugin>
									<groupId>org.apache.maven.plugins</groupId>
									<artifactId>maven-project-info-reports-plugin</artifactId>
									<version>${lcs.maven-project-info-reports-plugin.version}</version>
									<configuration>
										<encoding>${project.java.encoding}</encoding>
									</configuration>
								</plugin>
								<!-- heapsize ist fuer den release process SEHR wichtig !!! -->
								<plugin>
									<groupId>org.apache.maven.plugins</groupId>
									<artifactId>maven-javadoc-plugin</artifactId>
									<version>${lcs.maven-javadoc-plugin.version}</version>
									<configuration>
										<maxmemory>512M</maxmemory>
										<encoding>${project.java.encoding}</encoding>
									</configuration>
								</plugin>
								<plugin>
									<groupId>org.apache.maven.plugins</groupId>
									<artifactId>maven-surefire-report-plugin</artifactId>
									<version>${lcs.maven-surefire-report-plugin}</version>
								</plugin>
								<plugin>
									<groupId>org.apache.maven.plugins</groupId>
									<artifactId>maven-pmd-plugin</artifactId>
									<version>${lcs.maven-pmd-plugin.version}</version>
									<configuration>
										<targetJdk>${lcs.target.version}</targetJdk>
										<sourceEncoding>${project.java.encoding}</sourceEncoding>
										<minimumTokens>75</minimumTokens>
										<rulesets>
											<!-- pmd default -->
											<ruleset>/rulesets/basic.xml</ruleset>
											<ruleset>/rulesets/unusedcode.xml</ruleset>
											<ruleset>/rulesets/imports.xml</ruleset>
											<!-- pmd custom (part of xradar) -->
											<ruleset>/rulesets/design.xml</ruleset>
											<ruleset>/rulesets/codesize.xml</ruleset>
											<ruleset>/rulesets/coupling.xml</ruleset>
											<ruleset>/rulesets/optimizations.xml</ruleset>
											<ruleset>/rulesets/sunsecure.xml</ruleset>
											<ruleset>/rulesets/logging-java.xml</ruleset>
											<ruleset>/rulesets/strings.xml</ruleset>
											<!-- pmd custom -->
											<ruleset>/rulesets/braces.xml</ruleset>
											<ruleset>/rulesets/clone.xml</ruleset>
											<ruleset>/rulesets/finalizers.xml</ruleset>
										</rulesets>
									</configuration>
								</plugin>
								<plugin>
									<groupId>org.apache.maven.plugins</groupId>
									<artifactId>maven-checkstyle-plugin</artifactId>
									<version>${lcs.maven-checkstyle-plugin.version}</version>
								</plugin>
								<plugin>
									<groupId>org.codehaus.mojo</groupId>
									<artifactId>javancss-maven-plugin</artifactId>
									<version>${lcs.javancss-maven-plugin.version}</version>
								</plugin>
								<plugin>
									<groupId>org.codehaus.mojo</groupId>
									<artifactId>jdepend-maven-plugin</artifactId>
									<version>${lcs.jdepend-maven-plugin.version}</version>
								</plugin>
								<plugin>
									<groupId>net.sourceforge.ckjm</groupId>
									<artifactId>maven-ckjm-plugin</artifactId>
									<version>${lcs.maven-ckjm-plugin.version}</version>
								</plugin>
								<!-- cobertura MUST run before emma, otherwise we will receive java.lang.ClassFormatError: -->
								<plugin>
									<groupId>org.codehaus.mojo</groupId>
									<artifactId>cobertura-maven-plugin</artifactId>
									<version>${lcs.cobertura-maven-plugin.version}</version>
									<configuration>
										<formats>
											<format>html</format>
											<format>xml</format>
										</formats>
									</configuration>
								</plugin>
								<plugin>
									<groupId>org.codehaus.mojo</groupId>
									<artifactId>emma-maven-plugin</artifactId>
									<version>${lcs.emma-maven-plugin.version}</version>
								</plugin>
								<plugin>
									<groupId>org.codehaus.mojo</groupId>
									<artifactId>findbugs-maven-plugin</artifactId>
									<version>${lcs.findbugs-maven-plugin.version}</version>
									<configuration>
										<xmlOutput>true</xmlOutput>
										<findbugsXmlOutput>true</findbugsXmlOutput>
										<threshold>${lcs.qs.findbugs.threshold}</threshold>
										<effort>${lcs.qs.findbugs.effort}</effort>
										<!-- disable MS_EXPOSE_REP,EI_EXPOSE_REP,EI_EXPOSE_REP,EI_EXPOSE_STATIC_REP2 -->
										<omitVisitors>FindReturnRef</omitVisitors>
									</configuration>
								</plugin>
							</reportPlugins>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>lcs-code</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<executions>
							<execution>
								<id>attach-sources</id>
								<phase>verify</phase>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

